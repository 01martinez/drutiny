
<div class="row result-group">
  <div class="col-sm-12 col-md-10">
    <h4 id="{{ result.policy.name }}">{{ result.policy.title }} <small class="label label-{{ result.type }}">{{ result.type|split('-')|join(' ') }} <span class="glyphicon {% if result.isSuccessful %}glyphicon-ok{% else %}glyphicon-remove{% endif %}" aria-hidden="true"></span></small></h4>
    <p>{{ result.policy.description | markdown_to_html }}</p>
    <div class="alert alert-{{ result.type }}" role="alert">
      This policy was unable to determine the state of {{ result.policy.title }}.
    </div>
    {% if result.tokens.exception is defined %}
    <code>
      <pre>
        {{ result.tokens.exception }}
      </pre>
    </code>
    {% endif %}
  </div>
</div>
